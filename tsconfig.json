{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "declaration": true,
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}